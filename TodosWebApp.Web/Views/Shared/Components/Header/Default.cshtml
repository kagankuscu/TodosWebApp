@using System.Security.Claims;
@{
    string? name = User.FindFirstValue(ClaimTypes.GivenName);
}
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="todo" asp-action="Index">TodosWebApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Panel</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="todo" asp-action="Index">Todo List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="todo" asp-action="upcoming">Upcoming</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="todo" asp-action="history">History</a>
                    </li>
                </ul>
                <span class="nav-item mx-5 my-2">
                    <h4><span class="me-2">Welcome,</span> <b>@name?.Substring(0, 1).ToUpper()@name?.Substring(1)</b></h4>
                </span>
                <span class="nav-item me-3">
                    <a href="/User/Logout" class="btn btn-danger btn-sm" style="color: white;">Log out</a>
                </span>
            </div>
        </div>
    </nav>
</header>