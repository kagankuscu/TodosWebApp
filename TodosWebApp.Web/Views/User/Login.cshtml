@{
    Layout = "_UserLayout";
}

@model UserViewModel
<div class="d-flex container align-items-center justify-content-center mt-5">
    <div class="col-md-4">
        <div class="row">
            <div class="card">
                <div class="card-body my-3">
                    <h2 class="card-title mb-4 text-center">
                        Login or <a href="/User/Register"
                            class="link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Sign
                            Up</a>
                        <hr class="my-4">
                    </h2>
                    <form id="loginForm" asp-controller="User" asp-action="Login" method="POST" data-parsley-validate>
                        <div class="form-group mb-3">
                            <label for="Username" class="form-label">Username</label>
                            <input type="text" class="form-control mb-2" asp-for="Username" placeholder="Enter username" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="Password" class="form-label">Password</label>
                            <input type="password" class="form-control mb-2" asp-for="Password" data-parsley-trigger="change" placeholder="Password" required data-parsley-minlength="5" required data-parsley-maxlength="40" pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).+$">
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" asp-for="IsRememberMe">
                            <label class="form-check-label" for="IsRememberMe">Remember me</label>
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-primary btn-lg w-100">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>